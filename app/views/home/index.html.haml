%main.container
  %ul
    - flash.each do |_type, message|
      %li.mb-20= message
  #slider.carousel.slide.mb-10{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
      %li{'data-target': "#slider", 'data-slide-to': "2"}
    .carousel-inner{role: "listbox"}
      - @latest_books.each_with_index do |book, i|
        .item{:class => ("active" if i == 0)}
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{src: book.cover_url, alt: book.title}
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= truncate(book.description, :length =>100) unless book.description.nil?
                %p.lead.small= "#{book.author.first_name} #{book.author.last_name}"
                .general-align
                  %button.disabled.btn Buy Now
    
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
      = link_to 'Get Started', books_path, class:'btn btn-default'
      -# Get Started
  #bestsellers.mb-35
    %h3 Best Sellers
    .row
      - @bestsellers.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              %img.img-shadow.general-thumbnail-img{src: book.cover_url, alt: book.title}
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link.show-book{href: "/books/#{book.id}"}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= Money.new(book.price).format
              %p.title.mr-55= book.title
            %span.divider-sm
            %p.lead.small= "#{book.author.first_name} #{book.author.last_name}"
