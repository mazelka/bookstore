%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('.set_new_password')
  %form.general-form{action: customer_password_path, method: :post}
    %input{ type:'hidden', name:'_method', value:'put'}
    = render "devise/shared/error_messages", resource: resource
    .form-group.mb-30
      %label.control-label.input-label{for: "password"}= t('.type_new_password')
      %input#password.form-control{name:"customer[password]", type: "password", placeholder: t('.type_new_password')}
    .form-group.mb-40
      %label.control-label.input-label{for: "confirmPassword"}= t('.confirm_password')
      %input#confirmPassword.form-control{name:"customer[password_confirmation]", type: "password", placeholder: t('.confirm_password')}
      %input.hidden{name: "customer[reset_password_token]", type: "hidden", value: params[:reset_password_token]}
    %button.btn.btn-default.mb-20.center-block= t('.change')

