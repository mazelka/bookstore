%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Set new password
  %form.general-form{action: customer_password_path, method: :post}
    %input{ type:'hidden', name:'_method', value:'put'}
    = render "devise/shared/error_messages", resource: resource
    .form-group.mb-30
      %label.control-label.input-label{for: "password"} Type a new Password
      %input#password.form-control{name:"customer[password]", type: "password", placeholder: "Type a new Password"}
    .form-group.mb-40
      %label.control-label.input-label{for: "confirmPassword"} Confirm Password
      %input#confirmPassword.form-control{name:"customer[password_confirmation]", type: "password", placeholder: "Confirm Password"}
      %input.hidden{name: "customer[reset_password_token]", type: "hidden", value: params[:reset_password_token]}
    %button.btn.btn-default.mb-20.center-block Change

