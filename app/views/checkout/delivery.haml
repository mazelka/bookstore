%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %h3.general-subtitle Delivery
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th.col-method
            %span.in-grey-600.ml-40 Method
          %th
            %span.in-grey-600 Days
          %th
            %span.in-grey-600 Price
      %tbody
      = form_tag(url: wizard_path, method: 'put') do |f|
        %input{ type:'hidden', name:'_method', value:'put'}
        - @delivery.each do |delivery|
          %tr
            %td
              .form-group.radio.mt-0.mb-0
                %label.radio-label
                  %span.radio-icon
                    = radio_button_tag :delivery_id, delivery.id, false, class: 'radio-icon radio-input'
                  %span.radio-text= delivery.name
            %td
              %span= delivery.days
            %td
              %span.font-16.in-gold-500= Money.new(delivery.price).format
        .general-text-align
          %p.in-gold-500.font-18 Order Summary
          %table.general-summary-table
            %tr
              %td
                %p.font-16 Subtotal:
              %td
                %p.font-16= @cart_details.subtotal
            %tr
              %td
                %p.font-16 Coupon:
              %td
                %p.font-16= @cart_details.discount
            %tr
              %td
                %strong.font-18 Order Total:
              %td
                %strong.font-18= @cart_details.total
              .text-center
          = submit_tag :'Save and Continue', class: 'btn btn-default center-block mb-20'
    